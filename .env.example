# ==============================================
# Gateway & Backend Core Settings
# ==============================================

# RAG 데이터 수집 모드 (LOCAL: 로컬용, PROD: 운영용)
STORAGE_TYPE=LOCAL

# 민감 데이터 암호화를 위한 마스터 키 (필수)
# 32바이트(256비트) 랜덤 키를 Base64로 인코딩한 값이어야 합니다.
# 생성 명령: openssl rand -base64 32
MASTER_KEY=
ENCRYPTION_KEY=

# API Security
# JWT 서명 등에 사용되는 비밀키
SECRET_KEY=your-secret-key-change-in-production
# 샌드박스 환경 API 키
SANDBOX_API_KEY=Modulycallsandbox306
# Llama Cloud API 키
LLAMA_CLOUD_API_KEY=
# Node Environment (development, production)
NODE_ENV=development

# CORS & Cookie Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
COOKIE_DOMAIN=

# AWS 설정 (선택 사항 - S3 등을 사용할 경우 설정)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=

# ==============================================
# Authentication (Google OAuth)
# ==============================================
# Google Cloud Console에서 발급받은 OAuth 2.0 클라이언트 정보
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==============================================
# Database & Redis Settings
# ==============================================
# Docker Compose 사용 시 기본값 유지 (로컬 개발용)
POSTGRES_SERVER=postgres
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_DB=moduly_local

# DB Connection Details (Explicit)
DB_HOST=localhost
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=admin123
DB_NAME=moduly_local

# Redis 연결 URL
# Docker Compose 내에서는 'redis' 호스트 사용
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1

# ==============================================
# Client (Next.js) Settings
# ==============================================
# 백엔드 API URL (브라우저에서 접근 가능한 주소)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ==============================================
# Load Testing (Locust) Settings
# ==============================================
# 부하 테스트 시 사용할 워크플로우 식별자 (Slug)
LOAD_TEST_DEPLOYMENT_SLUG=
# 부하 테스트 시 사용할 인증 토큰 (X-Auth-Secret 헤더 값)
LOAD_TEST_AUTH_TOKEN=

