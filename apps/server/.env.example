# ================================================================
# Moduly Server Environment Variables
# 이 파일을 복사하여 .env로 저장하고 값을 채워주세요
# cp .env.example .env
# ================================================================

# [Database]
DB_HOST=localhost
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=your_password_here
DB_NAME=moduly_local

# --- [Google OAuth] ---
# Google Cloud Console에서 OAuth 2.0 클라이언트를 생성하세요
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# --- [AWS S3] (선택) ---
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=your-bucket-name

# --- [기타] ---
SECRET_KEY=your-secret-key-for-session
MASTER_KEY=your-master-key-for-encryption




# [FastAPI Settings]
APP_ENV=development  # development, production, test
DEBUG=True

# --- [AWS Region] ---
AWS_REGION=ap-northeast-2

# --- [CORS Origins] ---
# 쉼표로 구분하여 여러 origin 설정 가능
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- [Sandbox API] ---
# Dify Sandbox API URL (코드 실행 환경)
SANDBOX_URL=http://sandbox.local:8194
# Sandbox API 인증 키
SANDBOX_API_KEY=EXAMPLE_API_KEY
